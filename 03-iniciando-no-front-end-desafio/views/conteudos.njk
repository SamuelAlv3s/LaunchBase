
{% extends "layout.njk" %}
{% block head %}
<title>Conte√∫dos</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
{% block content %}
    <section class="cards">

    {% for item in items %}

        <div class="card {{item.style}}" id="{{item.id}}">
            <div class="card-img">
                <img src="https://skylab.rocketseat.com.br/static/{{item.img}}.svg" alt="Logo {{item.id}}">
            </div>
            <div class="info">
                <h1>{{item.title}}</h1>
                <h2>{{item.title2}}</h2>
            </div>
            <div class="price">
                <p>{{item.price}}</p>
            </div>
        </div>
        
    {% endfor %}
    </section>
    <div class="modal-overlay">
        <div class="modal">
            <a class="modal-close"><i class="material-icons">highlight_off</i></a>
            <a class="modal-full"><i class="material-icons">fullscreen</i></a>

            <div class="modal-content">
                <iframe src="https://rocketseat.com.br/starter" frameborder="0"></iframe>
            </div>
        </div>
        
    </div>
    <footer class="end"></footer>
    <script src="script.js"></script>
{% endblock %}