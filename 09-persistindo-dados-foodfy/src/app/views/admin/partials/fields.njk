<fieldset>
    <div class="field">
        <label for="title">Nome da receita</label>
        <input type="text" name="title" value="{{recipe.title}}">
    </div>
    <div class="field">
        <label for="image">Imagem da receita</label>
        <input type="text" name="image" value="{{recipe.image}}" placeholder="http://">
    </div>
    <div class="field">
        <label for="chef_id">Chef</label>
        <select name="chef_id">
            {% for chef in chefs %}
                <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected="selected" {% endif %}>{{chef.name}}</option>
            {% endfor %}
        </select>
    </div>
    <div class="field" id="ingredients">
        <label for="ingredients[]">Ingredientes</label>
        {% if recipe %}
            {% for recip in recipe.ingredients %}
                <div id="ingredient">
                    <input type="text" name="ingredients[]" value="{{recip}}">
                </div>
            {% endfor %}
        {% else %}
            <div id="ingredient">
                <input type="text" name="ingredients[]" value="{{recip}}">
            </div>
        {% endif %}
    </div>
    <div class="box-btn">
        <a class="btn-add-ingredient">Adicionar novo ingrediente</a>
    </div>
    <div class="field" id="staps">
        <label for="preparation[]">Modo de preparo</label>
        {% if recipe %}
            {% for preparatio in recipe.preparation %}
                <div id="stap">
                    <input type="text" name="preparation[]" value="{{preparatio}}">
                </div>
            {% endfor %}
        {% else %}
            <div id="stap">
                <input type="text" name="preparation[]" value="{{preparatio}}">
            </div>
        {% endif %}
    </div>
    <div class="box-btn">
        <a class="btn-add-stap">Adicionar novo passo</a>
    </div>
    <div class="field">
        <label for="information">Informações adicionais</label>
        <textarea name="information" cols="30" rows="10">{{recipe.information}}</textarea>
    </div>
</fieldset>