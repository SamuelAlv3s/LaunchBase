{% extends "layout.njk"%}
{% block content %}
    <div class="card">
        <div class="image" style="background: url({{student.url_avatar}}) no-repeat center center / cover">
        </div>
        <div class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Nome</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{student.birth}}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>{{student.schoolyear}}</div>
            </div>

            <div class="item">
                <div>Carga Horária Semanal</div>
                <div>
                    {{student.workload}}
                </div>
            </div>

            <a class="btn" href="/students/{{student.id}}/edit" class="btn">Editar</a>
        </div>
    </div>
{% endblock %}