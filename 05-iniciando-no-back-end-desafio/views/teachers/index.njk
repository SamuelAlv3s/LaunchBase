{% extends "layout.njk"%}
{% block content %}
    <div class="card table-container">
    <a class="btn new" href="/students/create">Novo</a>
        <table width="100%">

            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td>
                    <span style="background-image: url({{teacher.url_avatar}}"></span>
                    {{teacher.name}}</td>
                    <td>{{teacher.acting}}</td>
                    <td><a href="/teachers/{{teacher.id}}/show">Ver</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}