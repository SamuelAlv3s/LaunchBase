{% extends "layout.njk"%}
{% block content %}
    <div class="card">
        <div class="image" style="background: url({{teacher.url_avatar}}) no-repeat center center / cover">
        </div>
        <div class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Nome</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.schooling}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{teacher.type_class}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                {% for a in teacher.acting %}
                    <span>{{a}}</span>
                {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a class="btn" href="/teachers/{{teacher.id}}/edit" class="btn">Editar</a>
        </div>
    </div>
{% endblock %}