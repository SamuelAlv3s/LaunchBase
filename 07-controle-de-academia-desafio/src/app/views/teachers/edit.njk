{% extends "layout.njk"%}
{% block content %}

    <div class="card">
        <div class="image" style="background: url({{teacher.url_avatar}}) no-repeat center center / cover"></div>

        <div class="details">
            <form method="POST" action="/teachers?_method=PUT">
                {% include "teachers/fields.njk" %}
                <input type="hidden" name="id" value="{{teacher.id}}">
            </form>

            <form class="form-delete" method="POST" action="/teachers?_method=DELETE">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button type="submit">Deletar</button>
            </form>

            {% include "confirm.njk" %}
        </div>

    </div>

{% endblock %}