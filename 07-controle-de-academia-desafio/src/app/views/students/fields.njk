<h3>Edit</h3>

            <div class="item">
                <div>Avatar</div>
                <div>
                    <input type="url" name="url_avatar" placeholder="https://"
                    value="{{student.url_avatar}}">
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="name" placeholder="Nome completo"
                    value="{{student.name}}">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth" placeholder="Data de aniversário"
                    value="{{student.birth}}">
                </div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>
                    <input type="email" name="email" placeholder="insira um e-mail"
                    value="{{student.email}}">
                </div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>
                    <select name="schoolyear">
                        <option value="5EF" {% if student.schoolyear == "5EF" %}selected{% endif %}>5º ano Ensino Fundamental</option>
                        <option value="6EF" {% if student.schoolyear == "6EF" %}selected{% endif %}>6º ano Ensino Fundamental</option>
                        <option value="7EF" {% if student.schoolyear == "7EF" %}selected{% endif %}>7º ano Ensino Fundamental</option>
                        <option value="8EF" {% if student.schoolyear == "8EF" %}selected{% endif %}>8º ano Ensino Fundamental</option>
                        <option value="9EF" {% if student.schoolyear == "9EF" %}selected{% endif %}>9º ano Ensino Fundamental</option>
                        <option value="1EM" {% if student.schoolyear == "1EM" %}selected{% endif %}>1º ano do Ensino Médio</option>
                        <option value="2EM" {% if student.schoolyear == "2EM" %}selected{% endif %}>2º ano do Ensino Médio</option>
                        <option value="3EM" {% if student.schoolyear == "3EM" %}selected{% endif %}>3º ano do Ensino Médio</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Carga Horária</div>
                <div><input type="number" name="workload"value="{{student.workload}}"></div>
            </div>

            <div class="item">
                <div>Aluno de</div>
                <div>
                    <select name="teacher">
                    {%for teacher in options%}
                        <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id %}selected{% endif %}>{{teacher.name}}</option>
                    {%endfor%}
                    </select>
                </div>
            </div>

            <button type="submit">Salvar</button>