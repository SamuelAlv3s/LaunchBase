{% extends "layout.njk" %}

{% block content %}
    <section class="main">
        <div class="pratos">
        {% for item in receitas %}
            <div class="card" id="{{loop.index -1}}">
                <div class="img-lanche">
                    <img src="{{item.image2}}" alt="{{item.title}}">
                </div>
                <div class="nome-lanche">
                    <h2>{{item.title}}</h2>
                </div>
                <div class="autor-lanche">
                    <p>por {{item.author}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
{% block script %}
    <script src="/script.js"></script>
{% endblock %}